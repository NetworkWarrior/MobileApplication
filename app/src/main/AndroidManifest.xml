<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobileapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MobileApp">

        <!-- LoginActivity: The entry point of your app -->
        <activity android:name=".LoginActivity"
            android:exported="true"> <!-- This is the launcher activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- RegistrationActivity: Registration screen, accessible from LoginActivity -->
        <activity android:name=".RegistrationActivity"
            android:exported="true" />

        <!-- HomeActivity: The home screen that user sees after login -->
        <activity android:name=".HomeActivity"
            android:exported="true" />

    </application>

</manifest>
